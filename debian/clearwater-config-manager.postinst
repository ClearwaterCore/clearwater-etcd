set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

NAME=clearwater-config-manager
BASE_DIR=/usr/share/clearwater/clearwater-config-manager
INSTALLER="$BASE_DIR/env/bin/pip install --compile \
                    --no-index \
                    --upgrade \
                    --pre \
                    --force-reinstall \
                    --find-links $BASE_DIR/wheelhouse"

case "$1" in
    configure)
        # Create the specific user.
        if ! grep -q "^$NAME:" /etc/passwd ; then
            useradd --system -M -d /nonexistent -s /bin/false $NAME
        fi

        # Ensure the log directory exists and is owned by the user.
        mkdir -p -m 755 /var/log/$NAME
        chown -R $NAME:root /var/log/$NAME

        # make the log directory writeable by all users
        # and anything in that directory
        mkdir -p  /var/log/$NAME/allow
        chmod -R 777 /var/log/$NAME/allow


        # Set up the virtual env
        rm -rf $BASE_DIR/env
        virtualenv --python=$(which python) $BASE_DIR/env
        $INSTALLER pip
        $INSTALLER wheel
        $INSTALLER clearwater_config_manager
        chown -R $NAME:root $BASE_DIR/env

        # Start monit monitoring
        install -D --mode=0644 /usr/share/clearwater/conf/clearwater-config-manager.monit /etc/monit/conf.d/
        reload clearwater-monit || true

        # Restart clearwater-config-manager.  Always do this by terminating clearwater-config-manager so monit will
        # restart it more-or-less immediately.  (monit restart seems to have
        # significant lag.)
        # Don't fail if it's already stopped.
        service clearwater-config-manager stop || true

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
